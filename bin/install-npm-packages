#!/usr/bin/env zsh

source "$(dirname "$0")/script-helpers"

msg "Global npm packages"

npm update -g

PACKAGES=(
  coffee-script
  coffeelint
  jsonlint
  js-yaml
  meteorite
  wscat
  react-native-cli
  code-push-cli
  eslint
  eslint-plugin-react
  babel-eslint
  aglio
  node-gyp-install
  mermaid
  phantomjs
  )

npm install -g ${PACKAGES[@]}
