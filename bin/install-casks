#!/usr/bin/env zsh

source "$(dirname "$0")/script-helpers"

msg "Homebrew: Casks"

CASKS=(
	#macvim
	# textmate
	caskroom/versions/sublime-text3
	firefox
	google-chrome
	google-cloud-sdk
	android-studio
	#android-file-transfer
	# dropbox
	1password
	gimp
	screenhero
	skype
	iterm2
	flux
	slate
	gitup
	# rowanj-gitx
	# github-desktop
	# sourcetree
	sshfs
	oclint
	arq
	xquartz
	spotify
	wireshark
	mancy
	hopper-disassembler
	dash
	beamer
	trailer
	hockey
	#subtitles
	caption
	hazel
	vagrant
	virtualbox
	vlc
	steam
	ngrok
	imageoptim
	imagealpha
	pdfshaver
	colorpicker-skalacolor
	sketch
	omnigraffle
	handbrake
	teamviewer
	cyberduck
	vlc
	deezer
	genymotion
	viscosity
	bartender
	ios-console
	opensim
	simpholders
	x-moto
	inkscape
	namebench
	slack
	duet
	# couchbase-server-community
	cronnix
	launchrocket
	4k-video-downloader
	subler
	discord
	# playonmac
	#logmein-hamachi
	insomnia
	soundflower
	#krisp
	asciinema
	keybase
	caskroom/fonts/font-source-code-pro
	caskroom/fonts/font-sauce-code-powerline
	)

INSTALLED_CASKS="$(brew cask list -1)"

for cask in "${CASKS[@]}"
do
	NAME="$(awk '{ print $1 }' <<< "$cask")"
	SHORT_NAME="$(basename "$NAME")"

	if ! grep -qx "$SHORT_NAME" <<< "$INSTALLED_CASKS"; then
		brew cask install ${(z)cask}
	fi
done

brew cask cleanup
