#!/usr/bin/env zsh

source "$(dirname "$0")/script-helpers"

msg "Homebrew: Casks"

CASKS=(
	macvim
	textmate
	caskroom/versions/sublime-text3
	firefox
	google-chrome
	dropbox
	onepassword
	gimp
	hipchat
	screenhero
	skype
	iterm2-beta
	flux
	slate
	rowanj-gitx
	github
	sourcetree
	oclint
	arq
	xquartz
	spotify
	wireshark
	beamer
	trailer
	hockeyapp
	subtitles
	hazel
	vagrant
	virtualbox
	vlc
	steam
	ngrok
	imageoptim
	imagealpha
	pdfshaver
	colorpicker-skalacolor
	sketch
	omnigraffle
	handbrake
	teamviewer
	cyberduck
	vlc
	deezer
	rdio
	smartloader
	genymotion
	viscosity
	bartender
	simpholders-2-alpha
	x-moto
	inkscape
	namebench
	slack
	sqwiggle
	duet
	couchbase-server-community
	cronnix
	launchrocket
	4k-video-downloader
	subler
	caskroom/fonts/font-source-code-pro
	caskroom/fonts/font-sauce-code-powerline
	)

INSTALLED_CASKS="$(brew cask list -1)"

for cask in "${CASKS[@]}"
do
	NAME="$(awk '{ print $1 }' <<< "$cask")"
	SHORT_NAME="$(basename "$NAME")"

	if ! grep -qx "$SHORT_NAME" <<< "$INSTALLED_CASKS"; then
		brew cask install ${(z)cask}
	fi
done

brew cask cleanup
