#!/usr/bin/env zsh

source "$(dirname "$0")/script-helpers"

msg "Homebrew: Brews"

# Make sure weâ€™re using the latest Homebrew
brew update

# Upgrade any already-installed formulae
brew upgrade

FORMULAE=(
	fish
	coreutils
	grep
	bat
	vim
	git
	git-extras
	gh
	hub
	legit
	tig
	the_silver_searcher
	ripgrep
	figlet
	grc
	mongodb
	redis
	asdf
	# nvm
	yarn
	fzf
	autojump
	nmap
	wget
	htop
	resty
	# rbenv
	# ruby-build
	go
	rustup
	libxml2
	libidn
	# libcouchbase
	octave
	python
	python3
	mitmproxy
	class-dump
	cloc
	gist
	parallel
	openssh
	stormssh
	mobile-shell
	ssh-copy-id
	sshfs
	uncrustify
	imagemagick
	xctool
	#"android-ndk-r10e --without-android-sdk"
	pidcat
	awscli
	heroku-toolbelt
	archey
	tree
	lighttpd
	jq
	watchman
	flow
	aria2
	ctags
	mackup
	s3cmd
	shellcheck
	lnav
	cv
	peco
	gpg2
	ykman
	mediainfo
	unrar
	ncdu
	speedtest_cli
	tccutil
	mas
	pass
	pwgen
	kubernetes-helm
	facebook/fb/fbsimctl
	vitorgalvao/tiny-scripts/cask-repair
	robotsandpencils/made/xcodes
	#"https://raw.github.com/apiaryio/drafter/master/tools/homebrew/drafter.rb --HEAD"
	macfuse
	vorta
	)

INSTALLED_FORMULAE="$(brew list -1)"

for formula in "${FORMULAE[@]}"
do
	NAME="$(awk '{ print $1 }' <<< "$formula")"
	SHORT_NAME="$(basename "$NAME")"

	if ! grep -qx "$SHORT_NAME" <<< "$INSTALLED_FORMULAE"; then
		brew install ${(z)formula}
	fi
done

# Remove outdated versions from the cellar
brew cleanup
